<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Pocetna</title>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link crossorigin="anonymous" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" rel="stylesheet">
</head>
<body>


<nav class="shadow mb-5">
    <div class="py-3">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" href="/">Pocetna</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/strana/dodaj">Dodaj</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 class="text-center mb-5">Dodaj stavku</h1>
    <hr class="my-5">

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form action="/akcija/dodaj" method="post">
            <div class="form-group">
                <label for="tekst">Tekst stavke</label>
                <textarea class="form-control" name="tekst" id="tekst" cols="7"></textarea>
            </div>
        </form>
        <button class="btn btn-outline-primary w-100" id="btnSacuvaj">Dodaj novu stavku</button>
    </div>
    <div class="col-md-3"></div>
</div>

</div>


<script>
    $(document).ready(() =>{
        $("#btnSacuvaj").click(() => {
            if($("#tekst").val() == "") return;

            $("form").submit();
        })
    })
</script>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>
</html>